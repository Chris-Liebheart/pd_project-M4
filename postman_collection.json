{
  "info": {
    "name": "PD Project Collection",
    "_postman_id": "pd-project-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Customers",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/customers",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "customers"
          ]
        }
      }
    },
    {
      "name": "Get Customer",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/customers/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "customers",
            ":id"
          ]
        }
      }
    },
    {
      "name": "Create Customer",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\\n  \"full_name\": \"John Doe\",\\n  \"identification_number\": \"12345\",\\n  \"email\": \"john@example.com\"\\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/customers",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "customers"
          ]
        }
      }
    },
    {
      "name": "Import File",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/import",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "import"
          ]
        }
      }
    },
    {
      "name": "Total Paid",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reports/total-paid",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "reports",
            "total-paid"
          ]
        }
      }
    },
    {
      "name": "Pending Invoices",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reports/pending-invoices",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "reports",
            "pending-invoices"
          ]
        }
      }
    },
    {
      "name": "Transactions By Platform",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reports/transactions-by-platform?platform=Nequi",
          "host": [
            "{{baseUrl}}"
          ],
          "query": [
            {
              "key": "platform",
              "value": "Nequi"
            }
          ],
          "path": [
            "reports",
            "transactions-by-platform"
          ]
        }
      }
    }
  ]
}